@article{BottcherLeNe19,
  author     = {B\"{o}ttcher, Jan and Leis, Viktor and Neumann, Thomas and Kemper, Alfons},
  title      = {Scalable garbage collection for in-memory MVCC systems},
  year       = {2019},
  issue_date = {October 2019},
