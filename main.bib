@inproceedings{plor,
  author    = {Chen, Youmin and Yu, Xiangyao and Koutris, Paraschos and Arpaci-Dusseau, Andrea C. and Arpaci-Dusseau, Remzi H. and Shu, Jiwu},
  title     = {Plor: General Transactions with Predictable, Low Tail Latency},
  year      = {2022},
